<h1>Listing books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Book</th>
      <th>Author</th>
      <th>Published on</th>
      <th>Publisher</th>
      <th>Rating</th>
      <th>Comments</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author_name %></td>
        <td><%= book.published_on %></td>
        <td><%= book.publisher %></td>
        <td><%= book.rating %></td>
        <td><%= book.comments %></td>
        <td><%= link_to 'Show', book, :class=>"btn btn-info btn-sm", :style=>"color:white" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), :class=>"btn btn-primary btn-sm", :style=>"color:white" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-sm", :style=>"color:white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, :class=>"btn btn-success btn-sm", :style=>"color:white" %>
