<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Name of Book" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :author_name, "Author of Book" %><br>
    <%= f.text_field :author_name %>
  </div>
  <div class="field">
    <%= f.label :published_on %><br>
    <%= f.text_field :published_on, :class=>"datepicker" %>
  </div>
  <div class="field">
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
      todayHighlight: true,
      format: "dd-mm-yyyy"
    });
  });
</script>